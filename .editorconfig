root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[Makefile]
indent_style = tab
indent_size = 4

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[*.php]
indent_size = 4

[*.js]
indent_size = 2

[*.scss]
indent_size = 2

[*.json]
indent_size = 2
